.comment-form
  = form_for comment, url: tip_comments_path(params[:id]) do |f|
    .errors
      %ul
        - comment.errors.full_messages.each do |message|
          %li= message
    .field
      = f.label :content, "コメントを投稿する"
      = f.text_area :content, class: "form-control", rows: "5"
    .actions
      = f.submit class: "btn btn-success"

