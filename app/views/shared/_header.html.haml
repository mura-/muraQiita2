%header
  %nav
    - if user_signed_in?
      %strong= link_to current_user.username, root_path
      = link_to 'プロフィール変更', edit_user_registration_path
      = link_to 'ログアウト', destroy_user_session_path, method: :delete
    - else
      = link_to 'サインアップ', new_user_registration_path
      = link_to 'ログイン', new_user_session_path
    - if user_signed_in?
      %div.notify= link_to "新着通知 #{unread_notifications.count} 件", notifications_path
    %p.notice= notice
    %p.alert= alert

