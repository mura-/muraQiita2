- @title = 'tips詳細ページ'

%h1= @tip.title
%div
  - @tip.tag_list.each do |tag|
    %span.label.label-primary= tag
%div= markdown(@tip.content)
- if user_signed_in?
  - if @stock.blank?
    %div= button_to "ストックする", user_stocks_path(user_id: current_user, stock: {tip_id: @tip})
  - else
    %div= button_to "ストックを取り消す", user_stock_path(current_user, @stock), method: :delete
= render 'comments/form'
= render partial: 'comments/comment', collection: @comments

= link_to "tips一覧", tips_url
= link_to "編集する", edit_tip_path
- if is_my_tip?(@tip)
  = link_to "削除する", @tip, method: :delete, data: { confirm: '本当に削除しますか?'}
